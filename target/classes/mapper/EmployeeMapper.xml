<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.svtcc.dao.EmployeeDao">
    <select id="selectEmployeeById" resultType="cn.edu.svtcc.entity.Employee">
        select * from employee where id = #{id}
    </select>

    <insert id="addEmployee" parameterType="cn.edu.svtcc.entity.Employee">
        insert into employee (name,age,position)values (#{name},#{age},#{position})
    </insert>

    <update id="updateEmployee" parameterType="cn.edu.svtcc.entity.Employee">
        update employee
    <set>
        <if test="name !=null and name!=''">
            name=#{name},
        </if>
        <if test="age !=null and age!=' '">
            age=#{age},
        </if>
        <if test="position !=null and position!=''">
            position=#{position},
        </if>
    </set>
        where id=#{id}
    </update>

    <delete id="deleteEmployee">
        delete from employee where id=#{id}
    </delete>

</mapper>